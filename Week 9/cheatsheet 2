def main() -> None:
    Value = -1
    Sum = 0
    print("Program starting. ")
    while Value != 0:
        Feed = input("Insert a floating-point value (0 To stop): ")
        try:
            Value = float(Feed)
            Sum += Value 
            
            print(f"The state of the program: {Sum}")
        except Exception as err: 
            print(f"!!! Error !!! \nCould not convert {Feed} to float.")
            print(err)
    print(f"Total sum is: {Sum}")
    print("Program ending. ")

main()